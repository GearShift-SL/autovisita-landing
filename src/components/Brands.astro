---
import { Icon } from 'astro-icon/components';

interface Brand {
  name: string;
  icon: string;
}

interface Props {
  brands: Brand[];
  className?: string;
}

const { brands, className = '' } = Astro.props;
---

<div class={`w-full max-w-6xl mx-auto ${className}`}>
  <div class="flex flex-wrap items-center justify-center gap-8 py-8 px-4">
    {
      brands.map((brand) => (
        <div class="text-gray-400 h-14 flex items-center justify-center grayscale hover:grayscale-0 transition-all duration-300">
          <Icon name={brand.icon} class="w-full h-full" />
        </div>
      ))
    }
  </div>
</div>
